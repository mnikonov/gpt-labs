<labs:BasePage
    x:Class="Gpt.Labs.SingleWindowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:labs="using:Gpt.Labs"
    xmlns:controls="using:Gpt.Labs.Controls"
    mc:Ignorable="d">

   <Grid Background="{ThemeResource PanelBackgroundBrush}">
        <controls:PageHeader Height="40" x:Name="TitleBar" VerticalAlignment="Top">
            <TextBlock x:Name="Title" x:FieldModifier="public" TextLineBounds="Tight" FontSize="12" Grid.Column="0" Margin="16 6 0 0" VerticalAlignment="Center" />
        </controls:PageHeader>

        <Frame x:Name="PageFrame" Margin="0 40 0 0" x:FieldModifier="public">
            
        </Frame>
    </Grid>
</labs:BasePage>
